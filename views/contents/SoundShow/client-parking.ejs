<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
        <script src="/js/jquery-1.7.1.js"></script>
        <script src="/js/jquery.transit.min.js"></script>
        <script src="/js/jgestures.min.js"></script>
        <script src="/js/google_analytics.js"></script>
        <script src="/js/moment/moment.min.js"></script>
        <script>
			$(document).ready(function(){
				var targetTime = moment("2013-05-24 21:00:00");
				setInterval(function(){
					var d = moment(targetTime.valueOf() - new Date().valueOf());
					var hour = Number(d.format("HH")) -9 + (Number(d.format("DD")) - 1) * 24;
					if(hour < 10)
						hour = "0" + hour;
					$("#time_output").html(hour + ":" + d.format("mm:ss:SS"));
				},10);
			});
	    </script>
		<style>
			body{
				width:100%;
				height:100%;
			}
			body .site {
				width:100%;
				height:100%;
				text-align:center;
			}
			#time_output {
				font-family:"Helvetica Neue";
				font-size: 64pt;
				text-align:center;
			}
		</style>
		<title>SoundShow</title>
    </head>
    
    <body>
    	<div class="site"> 
			<h4 id="time_output"></h4>
        </div>
    </body>
</html>