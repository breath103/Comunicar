<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
        <script src="/js/jquery-1.7.1.js"></script>
        <script src="/js/jquery.transit.min.js"></script>
        <script src="/js/jgestures.min.js"></script>
        <script src="/js/google_analytics.js"></script>
        <script src="/js/moment/moment.min.js"></script>
        <script>
			$(document).ready(function(){
				var targetTime = moment("2013-05-24 21:00:00");
				setInterval(function(){
					var d = moment(targetTime.valueOf() - new Date().valueOf());
					var hour = Number(d.format("HH")) -9 + (Number(d.format("DD")) - 1) * 24;
					if(hour < 10)
						hour = "0" + hour;
					$("#time_output").html(hour + ":" + d.format("mm:ss"));
				},10);
			});
	    </script>
		<style>
			body , html {
				margin:0;
				padding:0;
				border:0;
				width:100%;
				height:100%;
				background-color:black;
			}
			body .site {
				width:100%;
				height:100%;
				text-align:center;
				background-image: url("background.png");
				background-repeat:no-repeat;
				background-size:100% auto;
			}
			#time_output {
				font-family:"Helvetica Neue";
				font-size: 58pt;
				color:white;
				text-align:center;
			}
			
			.soundshow_name {
				margin-left:auto;
				margin-right:auto;
				margin-bottom:2%;
				width: 80%;
				height: 20%;
				margin-top:10%;
				margin-bottom:10%;
				top: 20%;
			}
			
			.youtube_name {
				margin-left:auto;
				margin-right:auto;
				width:100%;
				height:auto;
			}
		</style>
		<title>SoundShow</title>
    </head>
    
    <body>
    	<div class="site"> 
    		<div class="soundshow_name">
	    		<img src="soundshow.png" width="100%" height="auto">
    		</div>
    		<div class="youtube_name">	
    		<iframe width="auto" height="auto" src="http://www.youtube.com/embed/IviLZf7OjMo?rel=0" frameborder="0" allowfullscreen></iframe>
    		</div>
			<h4 id="time_output"></h4>    		        
		</div>
    </body>
</html>
